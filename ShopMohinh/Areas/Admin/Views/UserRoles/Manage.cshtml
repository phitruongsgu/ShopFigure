@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";

}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Quản lý vai trò User</h2>
            Thêm / Loại bỏ vai trò của User : <b> @ViewBag.UserName. </b>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Cập nhật" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="Index" asp-controller="UserRoles" asp-route-id="@ViewBag.userId"
               class="btn btn-primary" style="width:auto">Huỷ bỏ
            </a>
        </div>
    </div>
</form>